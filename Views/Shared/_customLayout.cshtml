@using Microsoft.Web.Mvc.Controls
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" href="../../style/assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat:400,400i,700,700i,600,600i">
    <link rel="stylesheet" href="../../style/assets/fonts/font-awesome.min.css">
    <link rel="stylesheet" href="../../style/assets/fonts/simple-line-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/baguettebox.js/1.10.0/baguetteBox.min.css">
    <link rel="stylesheet" href="../../style/assets/css/Navigation-with-Search.css">
    <link rel="stylesheet" href="../../style/assets/css/smoothproducts.css">
</head>

<body>
    <nav class="navbar navbar-light navbar-expand-lg fixed-top bg-white text-justify clean-navbar">
        <div class="container">
            @Html.ActionLink("OnlineStore", "Index", "Products", null, new { @class = "navbar-brand logo" })<button data-toggle="collapse" class="navbar-toggler" data-target="#navcol-1"><span class="sr-only">Toggle navigation</span><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse"
                 id="navcol-1">
                @using (Html.BeginForm("Search", "Products", FormMethod.Get, new { @class = "form-inline mr-auto" }))
                {
                    <div class="form-group">
                        <label for="search-field">
                            <i class="fa fa-search"></i>
                        </label>
                        <input class="form-control search-field" id="search-field" name="search" style="margin-left: 8px;">
                    </div>

                }

                <ul class="nav navbar-nav ml-auto">
                    <li class="nav-item item" role="presentation">@Html.ActionLink("products", "Index", "Products", null, new { @class = "nav-link" })</li>
                    <li class="nav-item item" role="presentation">@Html.ActionLink("add product", "New", "Products", null, new { @class = "nav-link" })</li>
                </ul><a href="#" style="width: 59px;height: 25px;" id="cart"><i class="icon-basket-loaded"></i>&nbsp;Cart</a>
            </div>

        </div>
    </nav>


    <main class="page content-us-page">
        <section class="clean-block clean-form dark">
            <div class="container" style="margin-top: -80px">
                @RenderBody()
            </div>
        </section>

    </main>



    <footer class="page-footer dark">
        <div class="container">
            <div class="row">
                <div class="col-sm-3">
                    <h5>Get started</h5>
                    <ul>
                        <li><a href="#">Home</a></li>
                        <li><a href="#">Sign up</a></li>
                        <li><a href="#">Downloads</a></li>
                    </ul>
                </div>
                <div class="col-sm-3">
                    <h5>About us</h5>
                    <ul>
                        <li><a href="#">Company Information</a></li>
                        <li><a href="#">Contact us</a></li>
                        <li><a href="#">Reviews</a></li>
                    </ul>
                </div>
                <div class="col-sm-3">
                    <h5>Support</h5>
                    <ul>
                        <li><a href="#">FAQ</a></li>
                        <li><a href="#">Help desk</a></li>
                        <li><a href="#">Forums</a></li>
                    </ul>
                </div>
                <div class="col-sm-3">
                    <h5>Legal</h5>
                    <ul>
                        <li><a href="#">Terms of Service</a></li>
                        <li><a href="#">Terms of Use</a></li>
                        <li><a href="#">Privacy Policy</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="footer-copyright">
            <p>© 2020 Copyright Text</p>
        </div>
    </footer>
    <div class="modal fade" role="dialog" tabindex="-1" id="contactModal">
        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <div class="block-heading">
                        <h2 class="text-info">Shopping Cart</h2>
                    </div>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body" id="modal-body">
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script src="../../style/assets/js/jquery.min.js"></script>
    <script src="../../style/assets/bootstrap/js/bootstrap.min.js"></script>
    <script src="../../style/assets/js/smart-forms.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/baguettebox.js/1.10.0/baguetteBox.min.js"></script>
    <script src="../../style/assets/js/smoothproducts.min.js"></script>
    <script src="../../style/assets/js/theme.js"></script>
<script>
    $(document).ready(function() {
        $('#cart').on('click', function () {
            $.ajax({
                type: 'GET',
                url: '@Url.Action("Index","Cart")',
                datatype: 'html',
                success: function(data) {
                    $('#modal-body').html(data);
                    $('#contactModal').modal('show');
                }
            });

        });

    })
</script>

</body>
</html>

